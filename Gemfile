# frozen_string_literal: true

source 'https://rubygems.org'
gem 'bundler', '>= 1.16.0'

# Capybara is an integration testing tool for rack based web applications. It
# simulates how a user would interact with a website
gem 'capybara', '~> 2.15'
# Dead-simple way to make Capybara and Selenium play together
gem 'capybara-selenium', '~> 0.0.6'
# WebDriver is a tool for writing automated tests of websites. It aims
# to mimic the behaviour of a real user, and as such interacts with
# the HTML of the application.
gem 'selenium-webdriver', '~> 3.10'
